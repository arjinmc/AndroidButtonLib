<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.arjinmc.buttonlib.SubmitButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:SubmitButton.themeColor="#1ecd97"
        app:SubmitButton.borderColor="#bababa"
        app:SubmitButton.errorColor="#d5767c"
        app:SubmitButton.textSize="18sp"
        app:SubmitButton.thickness="2dp"
        app:SubmitButton.radius="50"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="effective force error only at progress status "/>

    <Button
        android:id="@+id/btn_force_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="force error"/>

</LinearLayout>
